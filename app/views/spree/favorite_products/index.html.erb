<div data-hook="account_my_favorite_products" class="account-my-favorite-products commonform">
  <h3><%= Spree.t(:my_favorite_products, scope: :favorite_products) %></h3>
  <% if @favorite_products.present? %>
    <div id="favorite-products">
      <% @favorite_products.each do |product| %>
        <div class="row vertical-align line-item">
          <div class="col-xs-4 col-sm-2" data-hook="favorite_item_image">
            <% if product.images.length == 0 %>
              <%= link_to mini_image(product), product %>
            <% else %>
              <%= link_to image_tag(product.images.first.attachment.url(:mini)), product %>
            <% end %>
          </div>
          <div class="col-xs-8 col-sm-10">
            <h4><%= link_to product.name, product_path(product) %></h4>
            <% if product.summary.present? %>
              <ul id="product-summary">
                <% product.summary.each_line do |line| %>
                  <li><%= line.chomp %></li>
                <% end %>
              </ul>
            <% end %>
          </div>
          <div class="col-xs-0" data-hook="favorite_item_delete">
            <%= link_to content_tag(:span, '&times;'.html_safe, title: 'eliminÄƒ'), favorite_product_path(:id => product.id), :method => :delete, :remote => true %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p><%= Spree.t(:you_have_no_favorite_products_yet, scope: :favorite_products) %></p>
  <% end %>
  
  <%= paginate @favorite_products %>
</div>
